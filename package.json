  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@10.5.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@heroicons/react": "^2.1.4",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/uuid": "^10.0.0",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "next-auth": "^4.24.7",
    "next-themes": "^0.3.0",
    "recoil": "^0.7.7",
    "sonner": "^1.5.0",
    "sweetalert2": "^11.12.1",
    "tw-elements-react": "^1.0.0-alpha-end",
